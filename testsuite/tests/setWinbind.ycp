{

// test for Samba::setWinbind
// $Id$
// testedfiles:Samba.ycp

    include "testsuite.ycp";
    
    import "Samba";

    TESTSUITE_INIT([
        $[ "init" : $[ "scripts" : $[ "exists" : true, "runlevel" : $[] ] ] ]
    ], nil);
    
    Samba::setWinbind( true );
    DUMP(Samba::winbind);
    DUMP(Samba::modified);
    
    Samba::modified = false;
    Samba::setWinbind( true );
    DUMP(Samba::winbind);
    // this time modified should not be set
    DUMP(Samba::modified);

    Samba::setWinbind( false );
    DUMP(Samba::winbind);
    // modified again
    DUMP(Samba::modified);
}
